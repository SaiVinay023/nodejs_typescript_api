{
  "compilerOptions": {
    "target": "es2017",  
    "module": "commonjs",
    //"rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true


  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
